      --          , "-O", "<fc=green>Charging</fc>"
      --          , "-i", "<fc=red>Charged</fc>"
      --    ]
      --    10
      ]
  , sepChar = "%"
  , alignSep = "}{"
  , template = "%StdinReader% }{ %multicpu% | %memory% | %battery% | %date%"
}
